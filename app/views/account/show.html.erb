<%= render "shared/myaccount_header", i18n_namespace: "My Account", image: "user-solid" %>
<div class="row account">
  <div class="small-12 column">
    

    <%= avatar_image(@account, seed: @account.id, size: 100, class: "margin-bottom") %>

    <%= form_for @account, as: :account, url: account_path do |f| %>
      <%= render "shared/errors", resource: @account %>

      <div class="row">
        <div class="small-12 medium-7 column">

          
          <h3><details>
             <summary><%= t("account.show.personal") %></summary> 

            <div class="small-12 medium-10" style="margin-left: 5%;">
              <% if @account.organization? %>
                <%= f.fields_for :organization do |fo| %>
                  <%= fo.text_field :name, autofocus: true, maxlength: Organization.name_max_length %>
                  <%= fo.text_field :responsible_name, autofocus: true, maxlength: Organization.responsible_name_max_length %>
                <% end %>
                <%= f.text_field :phone_number %>
              <% else %>
                <%= f.text_field :username, maxlength: User.username_max_length %>
                <%= f.text_field :first_name %>
                <%= f.text_field :last_name %>
                <%= f.text_field :phone_number %>
              
                
                
                <p><%= f.select :gender, [[t("activerecord.attributes.user.gender_male"),'male'],[t("activerecord.attributes.user.gender_female"),'female'],[t("activerecord.attributes.user.gender_diverse"),'diverse']], include_blank: true  %></p>

                <%= f.date_field :date_of_birth %>
                <%= f.text_field :street %>
                <%= f.text_field :housenumber %>
                <%= f.text_field :state %>
                <%= f.text_field :postal_code %>
                <%= f.text_field :city %>
               <%= f.text_field :country %>
             
              <% end %>
           </div>

            <div style="margin-left: 5%;">
              <%= f.check_box :public_activity %>
            </div>

            <div style="margin-left: 5%;">
             <%= f.check_box :public_interests %>
            </div>
          </details></h3>

          

          <h3><details>
             <summary><%= t("activerecord.attributes.user.public_profile") %></summary> 

              <div style="margin-left: 5%;">
                <%= f.check_box :public_profile_show_full_name %>
              </div>
              <div style="margin-left: 5%;">
                <%= f.check_box :public_profile_show_phone_number %>
             </div>
              <div style="margin-left: 5%;">
                <%= f.check_box :public_profile_show_gender %>
             </div>
             <div style="margin-left: 5%;">
                <%= f.check_box :public_profile_show_date_of_birth %>
              </div>
             <div style="margin-left: 5%;">
                <%= f.check_box :public_profile_show_address %>
              </div>
             <div style="margin-left: 5%;">
                <%= f.check_box :public_profile_show_state %>
             </div>
              <div style="margin-left: 5%;">
               <%= f.check_box :public_profile_show_city %>
             </div>
             <div style="margin-left: 5%;">
                <%= f.check_box :public_profile_show_country %>
             </div>

          </details></h3>

          

          <% if @account.email.present? %>
            
            <h3><details>
              <summary><%= t("account.show.notifications") %></summary>

              <div style="margin-left: 5%;">
                <%= f.check_box :email_on_comment %>
              </div>

              <div style="margin-left: 5%;">
               <%= f.check_box :email_on_comment_reply %>
              </div>

             <div style="margin-left: 5%;">
               <%= f.check_box :newsletter %>
              </div>

              <div style="margin-left: 5%;">
                <%= f.check_box :email_digest %>
              </div>

             <div style="margin-left: 5%;">
                <%= f.check_box :email_on_direct_message %>
             </div>
            </details></h3>


          <% end %>

          <% if @account.official_level == 1 %>
            <div style="margin-left: 5%;">
              <%= f.check_box :official_position_badge %>
            </div>
          <% end %>

          <% if feature?("user.recommendations") %>
          <h3><details>
            <summary><%= t("account.show.recommendations") %></summary>

            <% if feature?("user.recommendations_on_debates") %>
              <div style="margin-left: 5%;">
                <%= f.check_box :recommended_debates %>
              </div>
            <% end %>
            <% if feature?("user.recommendations_on_proposals") %>
              <div style="margin-left: 5%;">
                <%= f.check_box :recommended_proposals %>
              </div>
            <% end %>
            </details></h3>
          <% end %>

          <h3><details>
            <summary><%= t("activerecord.attributes.user.my_groups") %></summary> 

            <table style="height: fit-content;">
              <thead>
              <tr>
                <th><p><%= t("activerecord.attributes.user.fellowship_name") %></p></th>
                <th><p><%= t("activerecord.attributes.user.fellowship_descripton") %></p></th>
                <th><p ><%= t("activerecord.attributes.user.fellowship_requirements") %></p></th>
                <th><p><%= t("activerecord.attributes.user.fellowship_role") %></p></th>
                <th><p>Actions</p></th>
                
                <th colspan="3"></th>
              </tr>
              </thead>
          
              <tbody>
                <% @fellowships.each do |fellowship| %>
                  <tr>
                    <td><p><%= fellowship.name %></p></td>
                    <td><p><%= fellowship.description %></p></td>
                    <td>
                      <details>
                      <summary style="font-size:66%;"><%= t("activerecord.attributes.user.fellowship_all_requirements") %></summary>
                        
                        
                        <% if (fellowship.user_required_full_name? && current_user.first_name.present? && current_user.last_name.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_full_name") %></p>
                         <% elsif (fellowship.user_required_full_name?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_full_name") %></p>
                        <% end %>
                        <% if (fellowship.user_required_phone_number? && current_user.phone_number.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_phone_number") %></p>
                         <% elsif (fellowship.user_required_phone_number?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_phone_number") %></p>
                        <% end %>
                        <% if (fellowship.user_required_gender? && current_user.gender.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_gender") %></p>
                          <% elsif (fellowship.user_required_gender?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_gender") %></p>
                        <% end %>
                        <% if (fellowship.user_required_date_of_birth? && current_user.date_of_birth.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_date_of_birth") %></p>
                          <% elsif (fellowship.user_required_date_of_birth?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_phone_number") %></p>
                        <% end %>
                        <% if (fellowship.user_required_adress? && current_user.street.present? && current_user.housenumber.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_adress") %></p>
                          <% elsif (fellowship.user_required_adress?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_adress") %></p>
                        <% end %>
                        
                        <% if (fellowship.user_required_state? && current_user.state.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_state") %></p>
                          <% elsif (fellowship.user_required_state?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_state") %></p>
                        <% end %>
                        <% if (fellowship.user_required_city? && current_user.city.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_city") %></p>
                          <% elsif (fellowship.user_required_city?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_city") %></p>
                        <% end %>
                        <% if (fellowship.user_required_country? && current_user.country.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_country") %></p>
                          <% elsif (fellowship.user_required_country?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_required_country") %></p>
                        <% end %>
                        <% if (fellowship.user_public_show_full_name? && current_user.public_profile_show_full_name? && current_user.first_name.present? && current_user.last_name.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_full_name") %></p>
                          <% elsif (fellowship.user_public_show_full_name?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_full_name") %></p>
                        <% end %>
                         <% if (fellowship.user_public_show_gender? && current_user.public_profile_show_gender? && current_user.gender.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_gender") %></p>
                          <% elsif (fellowship.user_public_show_gender?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_gender") %></p>
                        <% end %>
                        <% if (fellowship.user_public_show_phone_number? && current_user.public_profile_show_phone_number? && current_user.phone_number.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_phone_number") %></p>
                          <% elsif (fellowship.user_public_show_phone_number?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_phone_number") %></p>
                        <% end %>
                        <% if (fellowship.user_public_show_date_of_birth? && current_user.public_profile_show_date_of_birth? && current_user.date_of_birth.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_date_of_birth") %></p>
                          <% elsif (fellowship.user_public_show_date_of_birth?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_date_of_birth") %></p>
                        <% end %>
                        <% if (fellowship.user_public_show_state? && current_user.public_profile_show_state? && current_user.state.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_state") %></p>
                          <% elsif (fellowship.user_public_show_state?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_state") %></p>
                        <% end %>
                        <% if (fellowship.user_public_show_city? && current_user.public_profile_show_city? && current_user.city.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_city") %></p>
                          <% elsif (fellowship.user_public_show_city?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_city") %></p>
                        <% end %>
                        <% if (fellowship.user_public_show_country? && current_user.public_profile_show_country? && current_user.country.present?) %>
                          <p style="color:green; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_country") %></p>
                          <% elsif (fellowship.user_public_show_country?) %>
                          <p style="color:red; text-align: center;"><%= t("activerecord.attributes.fellowship.user_public_show_country") %></p>
                        <% end %>

                      </details>
                      
                    </td>
                
                    <td style='width: 15%';><p>Hier Nutzerrolle einfügen (Admin, ...)</p></td>
                    <td style='width: 6%';><p><%= link_to t("activerecord.attributes.user.fellowship_show"), fellowship,class: "button" %></p></td>
                    <td style='width: 15%';><p><button class="button" style="background-color: #F96209;">Leave Group</button></p></td>
                 </tr>
                <% end %>
              </tbody>
            </table>

          

            </details></h3>

          <%= f.submit t("account.show.save_changes_submit"), class: "success button margin-top" %>
          <div style="margin-bottom: 0.1%;"></div>
          
            <%= link_to t("account.show.change_credentials_link"), edit_user_registration_path, class: "btn btn-primary" %>
            
            <%= link_to t("account.show.erase_account_link"), users_registrations_delete_form_path, class: "btn btn-danger" %>
            <div style="margin-bottom: 5%;"></div>
        </div>

        <div class="user-permissions small-12 medium-5 column">
          <h2><%= t("account.show.user_permission_title") %></h2>

          <p style="font-size: larger;"><%= t("account.show.user_permission_info") %></p>

          <ul>
            <li style="font-size: larger;"><span class="icon-check"></span>&nbsp;<%= t("account.show.user_permission_debates") %></li>
            <li style="font-size: larger;"><span class="icon-check"></span>&nbsp;<%= t("account.show.user_permission_proposal") %></li>
            <li style="font-size: larger;">
              <% if current_user.level_two_or_three_verified? %>
                <span class="icon-check"></span>
              <% else %>
                <span class="icon-x"></span>
              <% end %>
              <%= t("account.show.user_permission_support_proposal") %>
            </li>
            <li style="font-size: larger;">
              <% if current_user.level_three_verified? %>
                <span class="icon-check"></span>
              <% else %>
                <span class="icon-x"></span>
              <% end %>
              <%= t("account.show.user_permission_votes") %>
            </li>
          </ul>

          <p style="font-size: larger;">
            <span><%= t("account.show.user_permission_verify_info") %></span>
          </p>
          <p style="font-size: larger;">
            <%= t("account.show.user_permission_verify") %>
          </p>

          <% unless @account.organization? %>
            <div>
              <span class="verify-account">
                <% if current_user.level_three_verified? %>
                  <p class="already-verified" style="font-size: larger;">
                    <span class="icon-check"></span>
                    <%= t("account.show.verified_account") %>
                  </p>
                <% elsif current_user.level_two_verified? %>
                  <%= link_to t("account.show.finish_verification"), verification_path, class: "button success" %>
                <% else %>
                  <%= link_to t("account.show.verify_my_account"), verification_path, class: "button success" %>
                <% end %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>

<style>
  .button.success, .button.success.disabled, .button.success[disabled], .button.success.disabled:hover, .button.success[disabled]:hover, .button.success.disabled:focus, .button.success[disabled]:focus 
    {
       color: white;
    }
    .button
    {
      text-decoration:none;
    }
    p
    {
        font-size: 66%;
    }

    details {
  width: 100%;
  margin-bottom: .5rem;
  box-shadow: 0 .1rem 1rem -.5rem rgba(0,0,0,.4);
  border-radius: 5px;
  
}

summary {
  padding: 1rem;
  padding-left: 2.2rem;
  position: relative;
  cursor: pointer;
}

summary:before {
  content: '';
  border-width: .4rem;
  border-style: solid;
  border-color: transparent transparent transparent #fff;
  position: absolute;
  top: 1.3rem;
  left: 1rem;
  transform: rotate(0);
  transform-origin: .2rem 50%;
  transition: .25s transform ease;
}

details[open] > summary:before {
  transform: rotate(90deg);
}


details summary::-webkit-details-marker {
  display:none;
}

details > ul {
  padding-bottom: 1rem;
  margin-bottom: 0;
}

/* label{
  margin-left: 5%;
} */

</style>
<!-- User Image -->
    <div class="input-group">
        <% if current_user.avatar.attached? %>
           <%= image_tag(current_user.avatar.variant(resize: "60x60!"), class: "rounded-circle") %>
        <% else %>
           <%= image_tag 'Default_Profile_Avatar.png', height: 60, width: 60, class: "rounded-circle" %>
        <% end %>
    </div>
  
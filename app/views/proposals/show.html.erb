      <a href="/pro_contras/<%=pc.id.to_s%>" class="button hollow"><%=t("activerecord.attributes.proscons.show")%> (<%= pc.objections.all.count %>)</a><br>
      <% end %>  
    <% end %>
  <% end %>
  
  <br>
  </div>
  <div style="float:right; width:50%;">

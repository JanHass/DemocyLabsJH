       </div>

        <div class="field">
          <%= form.check_box :user_required_country %>
        </div>

        <p><%= t("activerecord.attributes.fellowship.info_user_show_public") %></p>

        <div class="field">
         <%= form.check_box :user_public_show_full_name %>

<% if current_user%>  



<%= render "shared/fellowships_header", i18n_namespace: "Groups", image: "group_icon" %>

<%= link_to 'New Group', new_fellowship_path, class: "button", :style => 'margin-bottom: 2.5%', :style => 'width: 12%' %>

<h2><%= t("activerecord.attributes.fellowship.mygroups") %></h2>

<% current_user.fellowships.each do |fellowship| %>
  
    
      <div class="card mb-3" style="width: 40%; margin-right:1.7%">
        <div class="row g-0">
          <div class="col-md-4">
            <% if fellowship.image.attached? %>
              <img src="<%= (url_for(fellowship.image)) %>" class="card-img-top" style="height: 14vw; width:11vw"></img>
              <% else %>
              <div style="height: 14vw; width:11vw"> </div>
            <% end %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-header"><%= fellowship.name %></h5>
              <p class="card-text" style="margin-top: 2%;"><%= fellowship.short_description %></p>
            </div>
            <p class="card-text" style="float: left;  margin-left: 3.5%; position: absolute; bottom: 11%;"><small class="text-muted">Created at <%= localize(fellowship.created_at, :format => :short2) %></small></p>
            <div style="float: right; margin-left: 57%; position: absolute; bottom: 15%; color: #3adb76;"><i class="fas fa-check-square fa-2x"></i></div>
          </div>
          <%= link_to 'Show', fellowship, class: "btn btn-info" %>
        </div>
      </div>
    
  

<% end %>
<table>
  <hr style="border-width: 5px;"></hr>
  <tbody>
  <h2 style="margin-bottom: 1%;"> <%= t("activerecord.attributes.fellowship.allgroups") %> </h2>
    


    <div></div>

    <% @fellowships.each do |fellowship| %>
<div class="card mb-3" style="width: 40%; margin-right: 2%;">
  <div class="row g-0">
    <div class="col-md-4">
      <% if fellowship.image.attached? %>
      <img src="<%= (url_for(fellowship.image)) %>" class="card-img-top" style="height: 14vw; width:11vw"></img>
      <% else %>
      <div style="height: 14vw; width:11vw"> </div>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-header"><%= fellowship.name %></h5>
        <p class="card-text" style="margin-top: 2%;"><%= fellowship.short_description %></p>
      </div>
      <% if current_user.fellowships.include?(fellowship) %>  
      <p class="card-text" style="float: left;  margin-left: 3.5%; position: absolute; bottom: 11%;"><small class="text-muted">Created at <%= localize(fellowship.created_at, :format => :short2) %></small></p>
      <div style="float: right; margin-left: 57%; position: absolute; bottom: 15%; color: #3adb76;"><i class="fas fa-check-square fa-2x"></i></div>
      <% else %>
      <p class="card-text" style="float: left;  margin-left: 3.5%; position: absolute; bottom: 17%;"><small class="text-muted">Created at <%= localize(fellowship.created_at, :format => :short2) %></small></p>
      <% end %>

    </div>
    <%= link_to 'Show', fellowship, class: "btn btn-info" %>
  </div>
</div>
    <% end %>
  </tbody>
</table>

<br>




<style>
  .btn-info
   {
       background:#05d3dd !important; 
       border: none;
       color: white;
   }

   .button
   {
      text-decoration: none;
   }

   .button.success, .button.success.disabled, .button.success[disabled], .button.success.disabled:hover, .button.success[disabled]:hover, .button.success.disabled:focus, .button.success[disabled]:focus 
    {
       color: white;
       text-decoration:none;
    }
    .card {display:inline-block;}
</style>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Pro Contras</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pro_contras.each do |pro_contra| %>
      <tr>
        <td><%= pro_contra.tag %></td>
        <td><%= pro_contra.body %></td>

        <td><%= link_to 'Show', pro_contra, class: "button hollow" %></td>
        <td><%= link_to 'Edit', edit_pro_contra_path(pro_contra), class: "button hollow" %></td>
        <td><%= link_to 'Destroy', pro_contra, method: :delete, data: { confirm: 'Are you sure?' }, class: "button alert hollow" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

